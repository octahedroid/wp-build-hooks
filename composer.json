{
  "name": "octahedroid/wordpress-build-hooks",
  "description": "This module allows you to trigger a build hook on any service provider that supports build hooks.",
  "type": "wordpress-plugin",
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Octahedroid",
      "email": "hq@octahedroid.com"
    }
  ],
  "require": {
    "guzzlehttp/guzzle": "^6.5"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.2",
    "squizlabs/php_codesniffer": "^3.5",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "scripts": {
    "phpcs-i": ["@php ./vendor/bin/phpcs -i"],
    "check-cs": ["@php ./vendor/bin/phpcs"],
    "fix-cs": ["@php ./vendor/bin/phpcbf"]
  }
}
